{
  "name": "coderdan-blog",
  "private": true,
  "description": "A simple starter to get up and developing quickly with Next.js",
  "license": "MIT",
  "version": "0.1.0",
  "author": "@cinnabarhorse",
  "scripts": {
    "dev": "next dev --webpack",
    "nowDev": "env-cmd -f .env now dev",
    "develop": "yarn dev",
    "build": "next build --webpack",
    "test": "node scripts/test-llms-txt.mjs && node scripts/test-seo-quality.mjs && node scripts/test-analytics-mode.mjs",
    "start": "next start",
    "export": "echo 'next export was removed in Next.js 16; use npm run build' && exit 1",
    "deploy": "yarn build",
    "deploy:monitor": "./scripts/deploy-and-monitor.sh",
    "replace:addresses": "node scripts/replace-addresses.mjs",
    "check:addresses": "node scripts/check-for-hardcoded-addresses.mjs",
    "discord:fetch": "node scripts/fetch-discord-announcements.mjs",
    "discord:update": "node scripts/update-pages-from-announcements.mjs",
    "discord:sync": "npm run discord:fetch && npm run discord:update",
    "discord:revert": "node scripts/revert-announcement-blocks.mjs",
    "check:seo": "node scripts/check-seo-quality.mjs --strict"
  },
  "dependencies": {
    "@now/node": "^1.8.5",
    "@vercel/analytics": "^1.6.1",
    "bootstrap": "^4.5.3",
    "gray-matter": "^4.0.2",
    "mailchimp-api-v3": "^1.14.0",
    "next": "^16.1.6",
    "node-glob": "^1.2.0",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-bootstrap": "^1.6.8",
    "react-burger-menu": "^3.1.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "env-cmd": "^10.1.0",
    "prettier": "^1.19.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "next"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cinnabarhorse/coderdan-blog"
  }
}
